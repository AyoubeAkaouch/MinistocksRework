<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="150dip"
              android:background="@drawable/bg_portfolio"
              android:padding="6dip">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_weight="9"
                android:layout_height="fill_parent">

            <TextView
                    android:id="@+id/portfolio_list_item_symbol"
                    android:layout_width="fill_parent"
                    android:layout_height="34dip"
                    android:layout_weight="4"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"/>

            <TextView
                    android:id="@+id/portfolio_list_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="39dip"
                    android:layout_weight="4"
                    android:textColor="#FFFFFF"
                    android:gravity="top"
                    android:text="No description"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="59dip"
                    android:layout_weight="1">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/portfolio_list_item_buy_price_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="8"
                            android:gravity="center_vertical"
                            android:textColor="#999999"
                            android:text="Buy price:"/>

                    <TextView
                            android:id="@+id/portfolio_list_item_buy_price"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="7"
                            android:textColor="#66CCCC"
                            android:gravity="center_vertical"/>

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/portfolio_list_item_date_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="8"
                            android:gravity="center_vertical"
                            android:textColor="#999999"
                            android:text="Buy date:"/>

                    <TextView
                            android:id="@+id/portfolio_list_item_date"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="7"
                            android:textColor="#FFFFFF"
                            android:gravity="center_vertical"/>

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/portfolio_list_item_quantity_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="8"
                            android:gravity="center_vertical"
                            android:textColor="#999999"
                            android:text="Quantity:"/>

                    <TextView
                            android:id="@+id/portfolio_list_item_quantity"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="7"
                            android:textColor="#FFFFFF"
                            android:gravity="center_vertical"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_weight="8"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:paddingTop="3dip"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/portfolio_list_item_current_price_label"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#999999"
                        android:text="Price:"/>

                <TextView
                        android:id="@+id/portfolio_list_item_current_price"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:gravity="right"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/portfolio_list_item_limit_high_label"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#999999"
                        android:text="High alert:"/>

                <TextView
                        android:id="@+id/portfolio_list_item_limit_high"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:textColor="#FFEE33"
                        android:gravity="right"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/portfolio_list_item_limit_low_label"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#999999"
                        android:text="Low alert:"/>

                <TextView
                        android:id="@+id/portfolio_list_item_limit_low"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:textColor="#FF66FF"
                        android:gravity="right"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="8dip"
                    android:layout_weight="1">

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text=""/>

                <TextView
                        android:id="@+id/portfolio_list_item_blank"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:layout_weight="1">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="8"
                        android:gravity="left">

                    <TextView
                            android:id="@+id/portfolio_list_item_last_change_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#999999"
                            android:text="Last ch:"/>

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:gravity="right">

                    <TextView
                            android:id="@+id/portfolio_list_item_last_change"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="right"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:layout_weight="1">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="9"
                        android:gravity="left">

                    <TextView
                            android:id="@+id/portfolio_list_item_total_change_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#999999"
                            android:text="Total:"/>

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:gravity="right">

                    <TextView
                            android:id="@+id/portfolio_list_item_total_change"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="right"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/portfolio_list_item_holding_value_label"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#999999"
                        android:text="Holding:"/>

                <TextView
                        android:id="@+id/portfolio_list_item_holding_value"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:textColor="#CCFF66"
                        android:gravity="right"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
